<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="homeAsUpIndicator">@drawable/ic_toolbar_back_arrow</item>
        <!-- android:textColorSecondary is the color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- custom font for the entire app -->
        <item name="fontFamily">@font/app_font_family</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <!-- TextAppearnce styles -->
    <style name="MainToolbarStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/app_font_family</item>
    </style>

    <style name="AppText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/app_font_family</item>
    </style>

    <style name="AppText.Tiny">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppText.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppText.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppText.Big">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppText.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppText.Tiny.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.Small.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.Medium.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.Big.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.Large.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppText.LightDark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Tiny.LightDark">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText.Small.LightDark">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText.Medium.LightDark">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText.Big.LightDark">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText.Large.LightDark">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppText.Tiny.Dark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Small.Dark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Medium.Dark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Big.Dark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Large.Dark">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="AppText.Medium.WishTag">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_bright</item>
    </style>

    <style name="TruncatedSingle">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TruncatedMulti">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EmptyText" parent="AppText">
        <item name="android:textSize">0sp</item>
    </style>

</resources>
